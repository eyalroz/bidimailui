<?xml version="1.0"?>

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>{54e72d7b-ed31-4736-854f-f517358f21ee}</em:id>
#expand    <em:version>__VERSION__</em:version>

    <!-- Target Application this extension can install into, 
         with minimum and maximum supported versions. --> 

#ifdef MOZ_THUNDERBIRD
    <!-- Thunderbird -->
    <em:targetApplication>
     <Description>
       <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
       <em:minVersion>1.4</em:minVersion>
       <em:maxVersion>1.5.0.*</em:maxVersion>
     </Description>
    </em:targetApplication>
#else
    <!-- Mozilla 1.5-1.7 -->
    <em:targetApplication>
     <Description>
       <em:id>{86c18b42-e466-45a9-ae7a-9b95ba6f5640}</em:id>
       <em:minVersion>1.5</em:minVersion>
       <em:maxVersion>1.8</em:maxVersion>
     </Description>
    </em:targetApplication>

    <!-- Seamonkey -->
    <em:targetApplication>
     <Description>
       <em:id>{92650c4d-4b8e-4d2a-b7eb-24ecf4f6b63a}</em:id>
       <em:minVersion>1.0</em:minVersion>
       <em:maxVersion>1.0</em:maxVersion>
     </Description>
    </em:targetApplication>
#endif

    <!-- Front End MetaData -->
    <em:name>BiDi Mail UI</em:name>
    <em:description>Directionality control features for Mozilla mail applications</em:description>
    <em:creator>The BiDi UI team</em:creator>
    <em:contributor>Moofie</em:contributor>
    <em:contributor>Eyal Rozenberg</em:contributor>
    <em:contributor>Asaf Romano</em:contributor>
    <em:contributor>Ilya Konstantinov</em:contributor>
    <em:contributor>Prognathous</em:contributor>
    <em:contributor>Ayman Hourieh</em:contributor>
    <em:contributor>Reuven Gonen</em:contributor>
    <em:homepageURL>http://bidiui.mozdev.org/</em:homepageURL>

    <em:iconURL>chrome://bidimailpack/content/bidimailpack.png</em:iconURL>

#ifdef MOZ_THUNDERBIRD
    <em:optionsURL>chrome://bidimailpack/content/bidimailpack-prefs.xul</em:optionsURL>
#endif

    <!-- Packages, Skins and Locales that this extension registers -->
    <em:file>
      <Description about="urn:mozilla:extension:file:bidimailpack.jar">
        <em:package>content/bidimailpack/</em:package>
        <em:locale>locale/en-US/bidimailpack/</em:locale>
        <em:locale>locale/he-IL/bidimailpack/</em:locale>
        <em:locale>locale/ar-SA/bidimailpack/</em:locale>
        <em:skin>skin/classic/bidimailpack/</em:skin>
      </Description>
    </em:file>
  </Description>      
</RDF>
